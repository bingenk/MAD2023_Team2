<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Recommendations.RecommendationsFragment">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fadeScrollbars="true"
            android:scrollbarStyle="outsideInset"
            android:scrollbarThumbHorizontal="@drawable/recco_toggle_on"
            android:scrollbars="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <ToggleButton
                    android:id="@+id/restaurant_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/recco_toggle"
                    android:backgroundTintMode="add"
                    android:checked="false"
                    android:drawableStart="@drawable/baseline_fastfood_24"
                    android:drawablePadding="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="restaurant"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textOff="restaurants"
                    android:textOn="restaurants"
                    app:iconGravity="textStart"
                    app:iconTint="?android:attr/textColorPrimary" />

                <ToggleButton
                    android:id="@+id/attractions_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/recco_toggle"
                    android:backgroundTintMode="src_atop"
                    android:checked="false"
                    android:drawableStart="@drawable/baseline_attractions_24"
                    android:drawablePadding="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Attractions"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textOff="Attractions"
                    android:textOn="Attractions"
                    app:iconGravity="textStart"
                    app:iconTint="?android:attr/textColorPrimary" />

                <ImageButton
                    android:id="@+id/recco_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/hotel_outline"
                    android:backgroundTint="@color/material_dynamic_tertiary70"
                    android:foregroundTintMode="multiply"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/baseline_tune_24" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recco_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                tools:listitem="@layout/recommendations_layout">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/recco_selecttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:text="Select either Restauraunt or Attraction to start finding new excitements!"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <Button
                android:id="@+id/recco_load"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="20dp"
                android:text="Load more"
                android:visibility="gone"
                app:icon="@drawable/baseline_add_24"
                app:iconGravity="textStart" />

            <ProgressBar
                android:id="@+id/recco_pb"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>